    full_name_text = text_box.output_full_name.get_text()
    address_text = text_box.output_current_address.get_text()

    # –£–¥–∞–ª—è–µ–º —Å–ª—É–∂–µ–±–Ω—ã–µ —Å–ª–æ–≤–∞
    full_name_clean = full_name_text.replace('Name:', '').strip()
    address_clean = address_text.replace('Current Address :', '').strip()

