import time

def test_clear(browser):
    text_box = TextBox(browser)

    text_box.visit()
    text_box.full_name.send_keys('testirovich')
    text_box.current_address.send_keys('Moscow')
    text_box.btn_submit.click()
    time.sleep(1)
