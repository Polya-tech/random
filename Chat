from pages.text_box_clear import TextBox
import time


def test_clear(browser):
    text_box = TextBox(browser)

    text_box.visit()

    # –¢–µ—Å—Ç–æ–≤—ã–µ –¥–∞–Ω–Ω—ã–µ
    name = 'testirovich'
    address = 'Moscow'

    # –í–≤–æ–¥ –¥–∞–Ω–Ω—ã—Ö
    text_box.full_name.send_keys(name)
    text_box.current_address.send_keys(address)
    text_box.btn_submit.click()

    time.sleep(1)  # –¥–∞—ë–º —Å—Ç—Ä–∞–Ω–∏—Ü–µ –æ–±–Ω–æ–≤–∏—Ç—å—Å—è

    # –ü–æ–ª—É—á–∞–µ–º —Ç–µ–∫—Å—Ç –∏–∑ —Ä–µ–∑—É–ª—å—Ç–∞—Ç–æ–≤
    full_name = text_box.output_full_name.get_text()
    current_address = text_box.output_current_address.get_text()

    # –£–±–∏—Ä–∞–µ–º –ª–∏—à–Ω–∏–µ –ø–æ–¥–ø–∏—Å–∏, —á—Ç–æ–±—ã —Å—Ä–∞–≤–Ω–∏—Ç—å —Ç–æ–ª—å–∫–æ –∑–Ω–∞—á–µ–Ω–∏—è
    full_name = full_name.replace('Name:', '').strip()
    current_address = current_address.replace('Current Address :', '').strip()

    # –ü—Ä–æ–≤–µ—Ä–∫–∏
    assert full_name == name, f"–û–∂–∏–¥–∞–ª–æ—Å—å '{name}', –ø–æ–ª—É—á–µ–Ω–æ '{full_name}'"
    assert current_address == address, f"–û–∂–∏–¥–∞–ª–æ—Å—å '{address}', –ø–æ–ª—É—á–µ–Ω–æ '{current_address}'"
üí¨ –ü–æ—á–µ–º—É —ç—Ç–æ –≤–∞—Ä–∏–∞–Ω—Ç –ª—É—á—à–µ —á–∏—Ç–∞–µ—Ç—Å—è
–∏–º–µ–Ω–∞ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã—Ö –∫–æ—Ä–æ—Ç–∫–∏–µ –∏ –æ—Ç—Ä–∞–∂–∞—é—Ç —Å–º—ã—Å–ª –¥–∞–Ω–Ω—ã—Ö;
