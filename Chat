    address_value = 'Moscow'

    text_box.full_name.send_keys(name_value)
    text_box.current_address.send_keys(address_value)
    text_box.btn_submit.click()

    time.sleep(1)  # –∫–æ—Ä–æ—Ç–∫–∞—è –ø–∞—É–∑–∞ –¥–ª—è –ø–æ—è–≤–ª–µ–Ω–∏—è —Ä–µ–∑—É–ª—å—Ç–∞—Ç–∞

