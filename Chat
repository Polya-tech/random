def test_clear(browser):
    text_box = TextBox(browser)
    text_box.visit()

    name = 'testirovich'
    address = 'Moscow'

    text_box.full_name.send_keys(name)
    text_box.current_address.send_keys(address)
    text_box.btn_submit.click()

    # –ü—Ä–æ–≤–µ—Ä–∫–∏ —Å –∏—Å–ø–æ–ª—å–∑–æ–≤–∞–Ω–∏–µ–º text_clean()
    assert text_box.output_full_name.text_clean('Name:') == name
    assert text_box.output_current_address.text_clean('Current Address :') == address
