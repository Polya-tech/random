from selenium.webdriver.common.by import By

class WebElement:

    def __init__(self, driver, locator):
        self.driver = driver
        self.locator = locator

    def find(self):
        return self.driver.find_element(By.CSS_SELECTOR, self.locator)

    def get_text(self):
        return self.find().text

    def send_keys(self, value):
        self.find().send_keys(value)

    def click(self):
        self.find().click()

    # üëá –ù–æ–≤—ã–π –º–µ—Ç–æ–¥:
    def text_clean(self, prefix):
        """–í–æ–∑–≤—Ä–∞—â–∞–µ—Ç —Ç–µ–∫—Å—Ç —ç–ª–µ–º–µ–Ω—Ç–∞ –±–µ–∑ –∑–∞–¥–∞–Ω–Ω–æ–≥–æ –ø—Ä–µ—Ñ–∏–∫—Å–∞ (–Ω–∞–ø—Ä–∏–º–µ—Ä 'Name:' –∏–ª–∏ 'Current Address :')"""
        return self.get_text().replace(prefix, '').strip()
